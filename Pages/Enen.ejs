<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,700italic,400,600,700" rel="stylesheet" type="text/css">
    <title>Mnemonic Generator</title>
</head>
<body>
    <div style="text-align: center; font-family: open sans;">
        <h1>Mnemonic Phrase</h1>
    </div>
    <div style="display: flex; align-items: center; justify-content: space-evenly; flex-wrap: wrap; border: 2px solid black; border-radius: 5px; height: auto; width: 400px; padding: 20px; gap: 10px; margin: 0 auto; background: #1F2128;">
        <% word.forEach(function(item, index) { %>
            <p style="flex-basis: 30%; text-align: center;  color: white; font-family: open sans;"><%= index+1 %>. <%= item %></p>
            <% if ((index + 1) % 3 === 0) { %>
                <div style="flex-basis: 100%; height: 0;"></div>
            <% } %>
        <% }) %>
    </div>

    <a href="/walletkeys"><button style="background-color: white; border: 2px solid black; border-radius: 15px; padding: 12px 20px 12px 20px; cursor: pointer; text-decoration: none; color: black;" >Wallet</button></a>
</body>
</html>
